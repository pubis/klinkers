<%= content_for :sidebar do %>
	<li class="nav-header"><%= t('categories.sidebar.headers.categories') %></li>
	<li>
		<% icn = '<i class="icon-pencil"></i>' %>
		<% ttl = t('categories.sidebar.categories.new') %>
		<%= link_to "#{icn} #{ttl}".html_safe, new_category_path %>
	</li>
	<%= render "sidebar/shortcuts" %>
<% end %>
<div class="page-header">
	<h1 id="categories">Categories</h1>
</div>
<div class="row-fluid">
	<div class="span6">
		<h2>Income categories</h2>
		<table class="table table-striped table-bordered">
			<thead>
			<tr>
				<th colspan="2">Name</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
			<% current_user.categories.incomes.roots.order("name ASC").each do |category| %>
			<tr>
				<td colspan="2">
					<%= link_to category.name, category %><br/>
					<%= category.description %>
				</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
							Actions
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "<i class=\"icon-edit\"></i> Edit".html_safe, edit_category_path(category) %></li>
							<li><%= link_to "<i class=\"icon-trash\"></i> Delete".html_safe, category, :method => :delete, :confirm => "Are you sure?" %></li>
							<li class="divider"></li>
							<li><%= link_to "<i class=\"icon-pencil\"></i> New child".html_safe, new_category_path(:parent => category.id) %></li>
						</ul>
					</div>
				</td>
			</tr>
			<% category.children.order("name ASC").each do |child| %>
			<tr>
				<td>&nbsp;</td>
				<td>
					<%= link_to child.name, child %><br/>
					<%= child.description %>
				</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
							Actions
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "<i class=\"icon-edit\"></i> Edit".html_safe, edit_category_path(child) %></li>
							<li><%= link_to "<i class=\"icon-trash\"></i> Delete".html_safe, child, :method => :delete, :confirm => "Are you sure?" %></li>
						</ul>
					</div>
				</td>
			</tr>
			<% end %>
			<% end %>
			</tbody>
		</table>
	</div>
	<div class="span6">
		<h2>Expense categories</h2>
		<table class="table table-striped table-bordered">
			<thead>
			<tr>
				<th colspan="2">Name</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>

							<li><%= link_to "<i class=\"icon-trash\"></i> Delete".html_safe, category, :method => :delete, :confirm => "Are you sure?" %></li>
							<li class="divider"></li>
							<li><%= link_to "<i class=\"icon-pencil\"></i> New child".html_safe, new_category_path(:parent => category.id) %></li>
						</ul>
					</div>
				</td>
			</tr>
			<% category.children.order("name ASC").each do |child| %>
			<tr>
				<td>&nbsp;</td>
				<td>
					<%= link_to child.name, child %><br/>
					<%= child.description %>
				</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
							Actions
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "<i class=\"icon-edit\"></i> Edit".html_safe, edit_category_path(child) %></li>
							<li><%= link_to "<i class=\"icon-trash\"></i> Delete".html_safe, child, :method => :delete, :confirm => "Are you sure?" %></li>
						</ul>
					</div>
				</td>
			</tr>
			<% end %>
			<% end %>
			</tbody>
		</table>
	</div>
</div>
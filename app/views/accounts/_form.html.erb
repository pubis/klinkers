<%= form_for @account, :html => { :class => "form-horizontal" } do |f| %>
<% if @account.errors.any? %>
	<div class="alert alert-error">
		<a class="close" data-dismiss="alert" href="#">&times;</a>
		<strong><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</strong>
		<ul>
		<% @account.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>
<fieldset>
	<div class="control-group">
		<%= f.label :account_type, :class => "control-label" %>
		<div class="controls">
			<%= f.select :account_type, [
					[t('accounts.types.account'), 'account'], 
					[t('accounts.types.creditcard'), 'creditcard'], 
					[t('accounts.types.loan'), 'loan'], 
					[t('accounts.types.portfolio'), 'portfolio']
				], {}, :class => "input-xlarge" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :name, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :name, :class => "input-xlarge" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :number, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :number, :class => "input-xlarge" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :favorite, :class => "control-label" %>
		<div class="controls">
			<%= f.check_box :favorite %>
		</div>
	</div>
	<% if @account.new_record? %>
	<div class="control-group">
		<%= f.label :opening_balance, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :opening_balance, :value => "0.00" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :opening_date, :class => "control-label" %>
		<div class="controls">
			<%= f.date_select :opening_date %>
		</div>
	</div>
	<% end %>
	<div class="control-group">
		<%= f.label :interest_rate, :class => "control-label" %>
		<div class="controls">
			<div class="input-append">
				<%= f.text_field :interest_rate %><span class="add-on">%</span>
			</div>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :credit_limit, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :credit_limit %>
		</div>
	</div>
</fieldset>
	<div class="form-actions">
		<%= f.submit "Save account", :class => "btn btn-primary" %>
	</div>
<% end %>
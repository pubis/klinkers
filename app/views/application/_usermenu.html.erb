<ul class="nav">
	<li class><%= link_to icon_tag(:home, white: true) + t('navbar.my_economy'), overview_path %></li>
	<li class="dropdown">
		<%= link_to (t('navbar.accounts') + ' ' + caret_tag).html_safe, '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'} %>
		<ul class="dropdown-menu">
			<li><%= link_to icon_tag(:pencil, white: true) + ' ' + t('navbar.accounts_menu.new'), new_account_path %></li>
			<li><%= link_to icon_tag(:'th-list', white: true) + ' ' + t('navbar.accounts_menu.listall'), accounts_path %></li>
			<% if current_user.accounts.favorites.any? %>
			<li class="divider"></li>
			<li class="nav-header"><%= t('navbar.accounts_menu.headers.favorites') %></li>
			<% current_user.accounts.favorites.each do |account| %>
			<li><%= link_to account.name, account %></li>
			<% end %>
			<% end %>
		</ul>
	</li>
	<li class="dropdown">
		<%= link_to (t('navbar.budgets') + ' ' + caret_tag).html_safe, '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'} %>
		<ul class="dropdown-menu">
			<li><%= link_to icon_tag(:pencil, white: true) + ' ' + t('navbar.budgets_menu.new'), new_budget_path %></li>
			<% if !current_user.budget.nil? %>
			<li class="divider"></li>
			<li class="nav-header"><%= t('navbar.budgets_menu.headers.active') %></li>
			<li><%= link_to current_user.budget.name, current_user.budget %></li>
			<% end %>
		</ul>
	</li>
	<li class="dropdown">
		<%= link_to (t('navbar.categories') + ' ' + caret_tag).html_safe, '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'} %>
		<ul class="dropdown-menu">
			<li><%= link_to icon_tag(:pencil, white: true) + ' ' + t('navbar.categories_menu.new'), new_category_path %></li>
			<li><%= link_to icon_tag(:'th-list', white: true) + ' ' + t('navbar.categories_menu.listall'), categories_path %></li>
		</ul>
	</li>
</ul>
<ul class="nav pull-right">
	<li class="dropdown">
		<%= link_to (icon_tag(:user) + ' ' + current_user.username + ' ' + caret_tag).html_safe, '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'} %>
		<ul class="dropdown-menu">
			<li><%= link_to icon_tag(:home) + ' ' + t('navbar.user_menu.my_economy'), overview_path %></li>
			<li><%= link_to icon_tag(:cogs) + ' ' + t('navbar.user_menu.settings'), settings_path %></li>
			<li class="divider"></li>
			<li><%= link_to icon_tag(:lock) + ' ' + t('navbar.user_menu.logout'), logout_path %></li>
		</ul>
</ul>
<%= simple_form_for @user, :html => { :class => "form-horizontal" } do |f| %>
<fieldset>
	
	<%= f.input :username, placeholder: t("users.form.placeholders.username") %>
	<%= f.input :email, placeholder: t("users.form.placeholders.email"), input_html: {class: "input-xlarge"} %>
	
	<%= f.input :name do %>
		<%= f.input_field :first_name, placeholder: t("users.form.placeholders.first_name"), class: "input-small" %>
		<%= f.input_field :last_name, placeholder: t("users.form.placeholders.last_name"), class: "input-medium"  %>
	<% end %>
	
	<%= f.input :language, collection: [['English', 'en'], ['Svenska', 'sv-SE']], selected: I18n.locale.to_s, required: true %>
	
	<%= f.input :currency_id, collection: Currency.all, include_blank: false, required: true  %>

	<%= f.input :password, required: true do %>
		<%= f.input_field :password, placeholder: t("users.form.placeholders.password"), class: "input-medium" %>
		<%= f.input_field :password_confirmation, placeholder: t("users.form.placeholders.password_confirmation"), class: "input-medium" %>
	<% end %>

	<div class="form-actions">
		<%= f.submit t("users.form.submit"), :class => "btn btn-primary btn-large" %>
	</div>
	</fieldset>
<% end %>
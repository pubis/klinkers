<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
<% if @user.errors.any? %>
	<div class="alert alert-error">
		<a class="close" data-dismiss="alert" href="#">&times;</a>
		<strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
		<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>
<fieldset>
	<div class="control-group">
		<%= f.label User.human_attribute_name("username"), :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :username, :class => "input-xlarge", :placeholder => t("users.form.placeholders.username") %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label User.human_attribute_name("email"), :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :email, :class => "input-xlarge", :placeholder => t("users.form.placeholders.email") %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label User.human_attribute_name("name"), :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :first_name, :class => "input-small", :placeholder => t("users.form.placeholders.first_name") %>
			<%= f.text_field :last_name,  :class => "input-medium", :placeholder => t("users.form.placeholders.last_name") %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label t('users.form.language'), :class => "control-label" %>
		<div class="controls">
			<%= f.select :language, [['English', 'en'], ['Svenska', 'sv-SE']], {:selected => I18n.locale.to_s} %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label Currency.model_name.human, :class => "control-label" %>
		<div class="controls">
			<%= f.collection_select :currency_id, Currency.all, :id, :name %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label User.human_attribute_name("password"), :class => "control-label" %>
		<div class="controls">
			<%= f.password_field :password, :class => "input-medium", :placeholder => t("users.form.placeholders.password") %>
			<%= f.password_field :password_confirmation, :class => "input-medium", :placeholder => t("users.form.placeholders.password_confirmation") %>
		</div>
	</div>
</fieldset>
	<div class="form-actions">
		<%= f.submit t("users.form.submit"), :class => "btn btn-primary btn-large" %>
	</div>
<% end %>
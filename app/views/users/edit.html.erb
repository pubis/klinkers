<div class="page-header">
	<h1>User Settings</h1>
</div>
<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
<fieldset>
	<div class="control-group">
		<%= f.label :username, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :username, :class => "input-xlarge" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :name, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :first_name, :class => "input-small", :placeholder => t('users.form.placeholders.first_name') %>
			<%= f.text_field :last_name,  :class => "input-large", :placeholder => t('users.form.placeholders.last_name') %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label Currency.model_name.human, :class => "control-label" %>
		<div class="controls">
			<%= f.collection_select :currency_id, Currency.all, :id, :name %>
		</div>
	</div>
</fieldset>
	<div class="form-actions">
		<%= f.submit "Save settings", :class => "btn btn-primary" %>
	</div>
<% end %>